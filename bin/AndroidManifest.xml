<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stu.zdy.weather_sample"
    android:versionCode="6"
    android:versionName="1.1.4" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stu.zdy.weather.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.stu.zdy.weather.appwidget.SmallWeatherWidget"
            android:label="质感天气（2 x 1）" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.stu.zdy.weather.small" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/provider" />
        </receiver>
        <receiver
            android:name="com.stu.zdy.weather.appwidget.BigWeatherWidget"
            android:label="质感天气（4 x 2）" >
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.stu.zdy.weather.big" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/provider_big" />
        </receiver>

        <service
            android:name="com.stu.zdy.weather.service.WidgetService"
            android:exported="false" >
        </service>
    </application>

</manifest>